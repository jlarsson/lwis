{
    "lwis": {
        "folders": {
            "temp": "./.data/.temp",
            "appdata": "./.data"
        },
        "modules": {
            // blostore - required
            // component for storing blobs (i.e uploaded files and derived subassets)
            "./modules/blobstore": {},
            // repository - required
            // component for storing metadata about blobs
            "./modules/repository": {},
            
            // metadata extraction
            "./modules/metadata-extractor": {
                "extractors": {
                    "./modules/metadata/lwip-extractor": {}
                }
            },
            
            
            "./routes/main/index": {
                "base": "/"
            },
            "./routes/repo/index": {
                "base": "/admin/repository"
            },
            "./routes/upload/index": {
                "base": "/admin/upload"
            }
        }
    }
}