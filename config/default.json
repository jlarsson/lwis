{
    "lwis": {
        "folders": {
            "temp": "./.data/.temp",
            "appdata": "./.data"
        },
        "modules": {
            // blostore - required
            // component for storing blobs (i.e uploaded files and derived subassets)
            "./modules/blobstore/blobstore.js": {},
            // repository - required
            // component for storing metadata about blobs
            "./modules/repository/repository.js": {},

            // metadata extraction
            "./modules/metadata/metadata.js": {
                "extractors": {
                    "./modules/metadata/set-image": {},
                    "./modules/metadata/set-charset": {}
                }
            },

            "./modules/publication/publication.js": {},

            "./routes/main/index": {
                "base": "/"
            },
            "./routes/repo/index": {
                "base": "/admin/repository"
            },
            "./routes/upload/index": {
                "base": "/admin/upload"
            },


            "./routes/publication": {}
        }

    }
}
